@using Dar_e_Arqam_pwd_isb.Models;
@model AllClasses
@{
    ViewBag.Title = "Trash";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/jquery-1.10.2.js"></script>
<script src="~/contents/js/jquery-ui-1.10.4.custom.min.js"></script>
<script src="~/contents/js/script_14.js"></script>
<link href="~/contents/css/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />
<link href="~/contents/css/style.css" rel="stylesheet" />
<script type="text/javascript">
      $(document).ready(function () {
          if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
           }
      });
</script>

<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Parents</p></div>
<div class="p_page_head_left"><h2 class="parents">Parents</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("Trash", "parents", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required parents in trash .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>
<div id="dialog-form"></div>
<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="/parents/active">All Active Students's Parents</a>
<a href="/parents/old">All Old Student's Parents</a>
<a href="/parents/trash">Trash</a>
<div class="clear"></div>
</div>

<h3 class="page_main_headings">Trash </h3>

@if(Model != null) {
foreach (var driv in Model.Student_s) { 

         //Widget Start
<div class="parent_dir_main_div">
<div class="parent_dir_main_div_inner">
<div class="parent_dir_main_div_inner_img"><img src="~/contents/images/profile_pic.jpg" /></div>
<div class="parent_dir_main_div_inner_detail">
    <div class="parent_dir_main_div_inner_detail_hd"><h3>@driv.Aplicnt_f_name</h3></div>
    <div class="parent_dir_main_div_inner_detail_li"><p><b>Email :</b> @driv.Aplicnt_f_email </p></div>
    <div class="parent_dir_main_div_inner_detail_li"><p><b>Phone :</b> @driv.Aplicnt_f_cell  </p></div>
    <div class="parent_dir_main_div_inner_detail_li"><p><b>Phone(Landline) :</b> @driv.Aplicnt_f_phone </p></div>
    <div class="parent_dir_main_div_inner_detail_li"><p><b>Address :</b> @driv.Aplicnt_f_bsns_addr </p></div>
</div>
<div class="clear"></div>
</div>
</div>
//Widget End
        
    }
}
else {
    @ViewBag.StatusMessage
}
    <div class="clear"></div>
</div>

@using Dar_e_Arqam_pwd_isb.Models
@model AllClasses
@{
    ViewBag.Title = "Trash";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script_11.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
      $(document).ready(function () {
          if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
           }
      });
</script>

<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Achievements</p></div>
<div class="p_page_head_left"><h2 class="achievements">Achievements</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("trash", "achievement", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required achievement in trash .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-add-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="" id="AddNewAchvmnt" class="add_new_item">Add New Achievement</a>
<a href="/achievement/all">All Active Achievements </a>
<a href="/achievement/trash">Trash</a>
<div class="clear"></div>
</div>
<h3 class="page_main_headings">Trash</h3>
@if(Model != null) {
foreach (var driv in Model.Achvmnt_s) {          
<div class="item_s_main_div">
        <div class="item_s_main_div_inner">
        <div class="item_s_main_div_img"><img src="~/Achvmnts/@driv.Picture" /></div>
        <div class="item_s_main_div_tit_dtl_links">
        <div class="item_s_main_div_tit"><h3>@driv.Name</h3></div>
        <div class="item_s_main_div_dtl"><p>@driv.Detail</p></div>
        </div>
        <div class="clear"></div>
        <div class="item_s_main_div_inner_opt">
        <div class="item_s_main_div_inner_opt_dlt"><a href="">Delete</a></div>
        <div class="item_s_main_div_inner_opt_edit"><a href="/achievement/edit/@driv.Id" class="UpdateExistingAchvmnt">Edit</a></div>
        <div class="item_s_main_div_inner_opt_dtl"><a href="">View More </a></div>
        <div class="clear"></div>
        </div>
        </div>    
    </div>
 }
}
else {
    @ViewBag.StatusMessage
}
<div class="clear"></div>
</div>


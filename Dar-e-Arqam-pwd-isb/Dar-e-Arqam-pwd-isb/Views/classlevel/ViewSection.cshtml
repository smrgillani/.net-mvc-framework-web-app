@using Dar_e_Arqam_pwd_isb.Models;
@model AllClasses
@{
    ViewBag.Title = "View Section Records";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script_2.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
      $(document).ready(function () {
          if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
           }
      });
</script>

<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Class Levels</p></div>
<div class="p_page_head_left"><h2 class="classes">Class Levels</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("index", "student", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required student .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-add-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="" id="AddNewClassLevel" class="add_new_item">Add New Class Level</a>
<a href="/classlevel/all">All Class Levels </a>
<a href="/classlevel/trash">Trash</a>
<div class="clear"></div>
</div>
<h3 class="page_main_headings">Students Of @Model.GradeSection_.Class_name Section (@Model.GradeSection_.Name)</h3>
@if(Model.Student_s == null) {
    
   <p class="db_null_msg"> @ViewBag.StatusMessage </p>
    
}else 
{
    
foreach (var driv in Model.Student_s) { 

@*-- Widget Start--*@
<div class="student_dir_main_div">
<div class="student_dir_main_div_inner">
<div class="student_dir_main_div_inner_img">
    @if(driv.Aplicnt_gender == "1"){
        <img src="~/contents/images/students_p_bg.png" />
    }else
        if (driv.Aplicnt_gender == "2")
        {
            <img src="~/contents/images/students_p_bg_.png" />
        }
</div>
<div class="student_dir_main_div_inner_detail">
    <div class="student_dir_main_div_inner_detail_hd"><h3>@driv.Aplicnt_name</h3></div>
    <div class="student_dir_main_div_inner_detail_li"><p><b>Registration No :</b> @driv.Aplicnt_Id </p></div>
    <div class="student_dir_main_div_inner_detail_li"><p><b>Date Of Birth :</b> @driv.Aplicnt_dob </p></div>
    <div class="student_dir_main_div_inner_detail_li"><p><b>Class Level :</b> @driv.ClassName </p></div>
    <div class="student_dir_main_div_inner_detail_li"><p><b>Phone # 1 :</b> @driv.Aplicnt_f_cell </p></div>
</div>
<div class="clear"></div>
</div>
<div class="student_dir_main_div_inner_opt">
<div class="student_dir_main_div_inner_opt_dtl"><a href="/student/view/@driv.db_Id">View Detail</a></div>
<div class="student_dir_main_div_inner_opt_edit"><a href="/student/edit/@driv.db_Id">Edit Admission Details</a></div>
<div class="student_dir_main_div_inner_opt_dlt"><a href="">Delete</a></div>
<div class="clear"></div>
</div>
</div>

@*- Widget End--*@
    }
    }
<div class="clear"></div>
</div>



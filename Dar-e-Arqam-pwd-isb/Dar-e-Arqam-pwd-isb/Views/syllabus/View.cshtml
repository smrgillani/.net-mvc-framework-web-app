@using Dar_e_Arqam_pwd_isb.Models
@model AllClasses
@{
    ViewBag.Title = "View Syllabus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script_5.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
      $(document).ready(function () {
          if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
          }
          $("#Syllabus_tabs").tabs();
      });
</script>


<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Syllabuses</p></div>
<div class="p_page_head_left"><h2 class="syllabuses">Syllabuses</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("Index", "syllabus", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required syllabus .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-add-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="" id="AddNewSyllabus" class="add_new_item">Add New Syllabus</a>
<a href="/syllabus/all">All Syllabuses</a>
<a href="/syllabus/trash">Trash</a>
<div class="clear"></div>
</div>
<div id="Syllabus_tabs">
  <ul>
    <li><a href="#tabs-1">Syllabus Content</a></li>
      <li><a href="#tabs-2">Web Settings</a></li>
  </ul>
<div id="tabs-1">
<h3 class="page_tabs_main_headings">Syllabus Content</h3>

<div class="page_contents_detail_opt">
<div class="page_contents_detail_opt_dlt"><a href="">Delete</a></div>
<div class="page_contents_detail_opt_edit"><a href="/syllabus/edit/@Model.Syllabus.Id" class="UpdateExistingSyllabus">Edit</a></div>
<div class="clear"></div>
</div> 

<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Name Of The Level</b> :</p> 
<p class="page_contents_detail">@Model.Syllabus.Name_of_lvl </p>
</div>

<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Detail Of The Syllabus</b> :</p> 
<p class="page_contents_detail">@Model.Syllabus.Detail_of_syllabus</p>
</div>


</div>
<div id="tabs-2">
<h3 class="page_tabs_main_headings"> Web Settings</h3>

<div class="p_page_head_bot_links">
<a href="/syllabus/publish/@Model.Syllabus.Id" id="ChangeSettingsSyllabus" class="add_new_item" style="margin-left:0;">Change Settings</a>
<div class="clear"></div>
</div>

<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Publish On Web </b> :</p>
@if (@Model.Syllabus.Publish == "2")
{
<p class="page_contents_detail">Published On Web !</p>
}else{
    <p class="page_contents_detail">Not Published On Web !</p>
}    
</div>

</div>
</div>
</div>
@using Dar_e_Arqam_pwd_isb.Models
@model AllClasses
@{
    ViewBag.Title = "All Contact Info";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script_15.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
          }
      });
</script>

<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Contact Info</p></div>
<div class="p_page_head_left"><h2 class="contact_infos">Contact Info</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("all", "contactinfo", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required contact information .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-add-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="/contactinfo/create" id="AddNewContactInfo" class="add_new_item">Add New Contact Info</a>
<a href="/contactinfo/all">All Contact Infos</a>
<a href="/contactinfo/active">Active Contact Info</a>
<a href="/contactinfo/trash">Trash</a>
<div class="clear"></div>
</div>
<h3 class="page_main_headings">All Contact Infos</h3>
@if(Model != null) {
foreach (var driv in Model.Contact_sInfo_s) {          
<div class="items_dir_main_div">
<div class="items_dir_main_div_inner">
<div class="items_dir_main_div_inner_img"><img src="~/contents/images/contact_ifo_ico.png" /></div>
<div class="items_dir_main_div_inner_detail">
    <div class="items_dir_main_div_inner_detail_hd"><h3>@driv.Title</h3></div>
    <div class="items_dir_main_div_inner_detail_li"><p><b>Cell :</b> @driv.Contact_Cell</p></div>
    <div class="items_dir_main_div_inner_detail_li"><p><b>Phone(Landline) :</b> @driv.Contact_Phone</p></div>
    <div class="items_dir_main_div_inner_detail_li"><p><b>Email :</b> @driv.Contact_Email</p></div>
    <div class="items_dir_main_div_inner_detail_li"><p><b>Website :</b> @driv.Contact_Website</p></div>
    <div class="items_dir_main_div_inner_detail_li"><p><b>Address :</b> @driv.Contact_Address</p></div>
</div>
<div class="clear"></div>
</div>
<div class="items_dir_main_div_inner_opt">
<div class="items_dir_main_div_inner_opt_dtl"><a href="">View</a></div>
<div class="items_dir_main_div_inner_opt_edit"><a href="/contactinfo/edit/@driv.Id" class="UpdateExistingContactInfo">Edit</a></div>
<div class="items_dir_main_div_inner_opt_dlt"><a href="">Delete</a></div>
<div class="clear"></div>
</div>
</div>

 }
}
else {
    @ViewBag.StatusMessage
}

<div class="clear"></div>
</div>



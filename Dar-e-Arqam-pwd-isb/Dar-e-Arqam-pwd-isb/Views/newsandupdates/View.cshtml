@using Dar_e_Arqam_pwd_isb.Models;
@model AllClasses 
@{
    ViewBag.Title = "View News Or Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script_0.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
      $(document).ready(function () {
          if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
          }
          $("#Newsandupdates_tabs").tabs();
      });
</script>

<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > News And Updates</p></div>
<div class="p_page_head_left"><h2 class="newsandupdates">News And Updates</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("Index", "newsandupdates", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the recent news and updates .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-add-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="" id="AddNewsOrUpdate" class="add_new_item">Add New News Or Update</a>
<a href="/newsandupdates/active">All Active News And Updates</a>
<a href="newsandupdates/old">All Old News And Updates</a>
<a href="/newsandupdates/trash">Trash</a>
<div class="clear"></div>
</div>

<div id="Newsandupdates_tabs">
  <ul>
    <li><a href="#tabs-1">News Or Update Content</a></li>
      <li><a href="#tabs-2">Web Settings</a></li>
  </ul>
<div id="tabs-1">
<h3 class="page_tabs_main_headings">News And Update Content</h3>

<div class="page_contents_detail_opt">
<div class="page_contents_detail_opt_dlt"><a href="/newsandupdates/delnewsupdt/@Model.NewsAndUpdt.Id">Delete</a></div>
<div class="page_contents_detail_opt_edit"><a href="/newsandupdates/edit/@Model.NewsAndUpdt.Id" class="UpdateNewsOrUpdate">Edit</a></div>
<div class="clear"></div>
</div> 
    
<div class="page_contents_info_boxes_for_img">
<img src="~/News_And_Updates/@Model.NewsAndUpdt.Picture" />
</div>

<div class="page_contents_info_boxes_for_content">
<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Title </b> :</p> 
<p class="page_contents_detail">@Model.NewsAndUpdt.Name </p>
</div>

<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Detail</b> :</p> 
<p class="page_contents_detail">@Model.NewsAndUpdt.Detail</p>
</div>
</div>

    <div class="clear"></div>

</div>
<div id="tabs-2">
<h3 class="page_tabs_main_headings"> Web Settings</h3>

<div class="p_page_head_bot_links">
<a href="/newsandupdates/publish/@Model.NewsAndUpdt.Id" id="ChangeSettingsNewsOrUpdate" class="add_new_item" style="margin-left:0;">Change Settings</a>
<div class="clear"></div>
</div>

<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Publish On Web </b> :</p>
@if(@Model.NewsAndUpdt.Publish == "2"){
<p class="page_contents_detail">Published On Web !</p>
}else{
    <p class="page_contents_detail">Not Published On Web !</p>
}    
</div>

</div>
</div>

</div>
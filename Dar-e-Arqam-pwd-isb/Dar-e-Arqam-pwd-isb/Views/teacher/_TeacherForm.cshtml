<div class="_forms_select_div"> @Html.DropDownListFor(m => m.T_type ,
                new List<SelectListItem>
                {
                    new SelectListItem { Text = "Select Type . . ", Value = "0"},
                    new SelectListItem { Text = "Qari / Qariyah", Value = "1"},
                    new SelectListItem { Text = "Class Teacher", Value = "2"}

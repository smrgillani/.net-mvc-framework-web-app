<div class="_forms_input_div"> @Html.TextBoxFor(m => m.T_Id, new { }) </div>
</div>
    
<div class="_forms_label_n_input_div">
<div class="_forms_label_div"><label for="T_name" > Name : </label></div>
<div class="_forms_input_div"> @Html.TextBoxFor(m => m.T_name, new { }) </div>

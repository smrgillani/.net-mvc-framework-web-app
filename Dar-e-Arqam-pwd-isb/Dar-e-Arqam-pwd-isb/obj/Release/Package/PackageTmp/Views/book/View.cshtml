@using Dar_e_Arqam_pwd_isb.Models
@model AllClasses
@{
    ViewBag.Title = "View A Book";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script_4.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
      $(document).ready(function () {
          if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
          }
          $("#Book_tabs").tabs();
      });
</script>

<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Books</p></div>
<div class="p_page_head_left"><h2 class="books">Books</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("all", "book", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required book .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-add-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="" id="AddNewBook" class="add_new_item">Add New Book</a>
<a href="/book/all">All Books </a>
<a href="/book/active">All Active Books</a>
<a href="/book/trash">Trash</a>
<div class="clear"></div>
</div>
<div id="Book_tabs">
  <ul>
    <li><a href="#tabs-1">Book Info</a></li>
    <li><a href="#tabs-2">Web Settings</a></li>
</ul>
<div id="tabs-1">

<h3 class="page_tabs_main_headings"> @Model.Book_.Name , Book Of Grade @Model.Book_.Class_name </h3> 
<div class="page_contents_detail_opt">
<div class="page_contents_detail_opt_dlt"><a href="/book/delbook/@Model.Book_.Id">Delete</a></div>
<div class="page_contents_detail_opt_edit"><a href="/book/edit/@Model.Book_.Id" class="UpdateExistingBook">Edit</a></div>
<div class="clear"></div>
</div>          

<div style="width:80%; margin:0 auto; margin-top:10px; height:auto;"><img src="~/Books/@Model.Book_.Picture" style="width:100%; height:auto;" /></div>
  
</div>

<div id="tabs-2">
<h3 class="page_tabs_main_headings">Web Settings</h3>
<div class="p_page_head_bot_links">
<a href="/book/publish/@Model.Book_.Id" id="ChangeSettingsBook" class="add_new_item" style="margin-left:0;">Change Settings</a>
<div class="clear"></div>
</div>
    
<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Publish On Web </b> :</p>
@if (@Model.Book_.Publish == "2")
{
<p class="page_contents_detail">Published On Web !</p>
}else{
    <p class="page_contents_detail">Not Published On Web !</p>
}    
</div> 

</div>
</div>

<div class="clear"></div>

</div>
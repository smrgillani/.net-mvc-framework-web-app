@using Dar_e_Arqam_pwd_isb.Models
@model AllClasses
@{
    ViewBag.Title = "Trash";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
      $(document).ready(function () {
          if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
           }
      });
</script>

<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Teachers</p></div>
<div class="p_page_head_left"><h2 class="teachers">Teachers</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("trash", "Teacher", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required teacher in trash .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>
<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="/teacher/create" id="AddNewTeacher" class="add_new_item">Add New Teacher</a>
<a href="/teacher/active">All Active Teachers</a>
<a href="/teacher/old">All Old Teachers</a>
<a href="/teacher/trash">Trash</a>
<div class="clear"></div>
</div>

<h3 class="page_main_headings">Trash</h3>
@if(Model != null) {
foreach (var driv in Model.Teacher) { 

         //Widget Start
<div class="teacher_dir_main_div">
<div class="teacher_dir_main_div_inner">
<div class="teacher_dir_main_div_inner_img"><img src="~/contents/images/teacher_s.png" /></div>
<div class="teacher_dir_main_div_inner_detail">
    <div class="teacher_dir_main_div_inner_detail_hd"><h3>@driv.T_name</h3></div>
    <div class="teacher_dir_main_div_inner_detail_li"><p><b>Joinig Date :</b> 27-08-2014 </p></div>
    <div class="teacher_dir_main_div_inner_detail_li"><p><b>Email :</b> @driv.T_email </p></div>
    <div class="teacher_dir_main_div_inner_detail_li"><p><b>Phone :</b> @driv.T_c_num </p></div>
    <div class="teacher_dir_main_div_inner_detail_li"><p><b>Specialize In :</b> Subject Name </p></div>
</div>
<div class="clear"></div>
</div>
<div class="teacher_dir_main_div_inner_opt">
<div class="teacher_dir_main_div_inner_opt_edit" style="width:192px;"><a href="/teacher/restore/@driv.Id" class="UpdateExistingTeacher">Restore</a></div>
<div class="teacher_dir_main_div_inner_opt_dlt" style="width:192px;"><a href="/teacher/delete/@driv.Id">Delete Permanently</a></div>
    <div class="clear"></div>
</div>
</div>
//Widget End
        
    }
}
else {
 <p class="db_null_msg"> @ViewBag.StatusMessage </p>
}

    

<div class="clear"></div>
</div>
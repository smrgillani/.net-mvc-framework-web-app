@using Dar_e_Arqam_pwd_isb.Models
@model AllClasses
@{
    ViewBag.Title = "View Contact Info";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script_15.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {
        if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
        }
        $("#ContactInfo_tabs").tabs();
      });
</script>

<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Contact Info</p></div>
<div class="p_page_head_left"><h2 class="contact_infos">Contact Info</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("Index", "contactinfo", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required contact information .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-add-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="/contactinfo/create" id="AddNewContactInfo" class="add_new_item">Add New Contact Info</a>
<a href="/contactinfo/all">All Contact Infos</a>
<a href="/contactinfo/active">Active Contact Info</a>
<a href="/contactinfo/trash">Trash</a>
<div class="clear"></div>
</div>

<div id="ContactInfo_tabs">
  <ul>
    <li><a href="#tabs-1">Contact Info</a></li>
    <li><a href="#tabs-2">Web Settings</a></li>
</ul>
<div id="tabs-1">

<h3 class="page_tabs_main_headings"> Contact Info</h3> 
<div class="page_contents_detail_opt">
<div class="page_contents_detail_opt_dlt"><a href="/contactinfo/delcontactinfo/@Model.ContactInfo.Id">Delete</a></div>
<div class="page_contents_detail_opt_edit"><a href="/contactinfo/edit/@Model.ContactInfo.Id" class="UpdateExistingContactInfo">Edit</a></div>
<div class="clear"></div>
</div>          

<div class="page_contents_info_boxes">
<p class="page_contents_detail_h"> <b> Title </b> :</p> 
<p class="page_contents_detail">@Model.ContactInfo.Title</p>
</div>

<div class="page_contents_info_boxes">
<p class="page_contents_detail_h"> <b> Cell Number </b> :</p> 
<p class="page_contents_detail">@Model.ContactInfo.Contact_Cell</p>
</div>

    <div class="clear"></div>

<div class="page_contents_info_boxes">
<p class="page_contents_detail_h"> <b> Phone (Landline) </b> :</p> 
<p class="page_contents_detail">@Model.ContactInfo.Contact_Phone</p>
</div>

<div class="page_contents_info_boxes">
<p class="page_contents_detail_h"> <b> Email </b> :</p> 
<p class="page_contents_detail">@Model.ContactInfo.Contact_Email</p>
</div>

    <div class="clear"></div>

<div class="page_contents_info_boxes">
<p class="page_contents_detail_h"> <b> Website </b> :</p> 
<p class="page_contents_detail">@Model.ContactInfo.Contact_Website</p>
</div>

<div class="page_contents_info_boxes">
<p class="page_contents_detail_h"> <b> Location Address </b> :</p> 
<p class="page_contents_detail">@Model.ContactInfo.Contact_Address</p>
</div>

    <div class="clear"></div>

    <div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Map Location </b> :</p> 
<p class="page_contents_detail">@Model.ContactInfo.Contact_Location</p>
</div>
  
</div>

<div id="tabs-2">
    <h3 class="page_tabs_main_headings">Web Settings</h3>
<div class="p_page_head_bot_links">
<a href="/contactinfo/publish/@Model.ContactInfo.Id" id="ChangeSettingsContactInfo" class="add_new_item" style="margin-left:0;">Change Settings</a>
<div class="clear"></div>
</div>
    
<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Publish On Web </b> :</p>
@if (@Model.ContactInfo.Publish == "2")
{
<p class="page_contents_detail">Published On Web !</p>
}else{
    <p class="page_contents_detail">Not Published On Web !</p>
}    
</div> 

</div>
</div>

<div class="clear"></div>
</div>



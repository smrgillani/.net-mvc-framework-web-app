<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @*<script src="~/contents/js/jquery-1.10.2.js"></script>*@
    <script src="~/contents/js/jquery.min.js"></script>
    <script src="~/contents/js/jquery-ui-1.10.4.custom.min.js"></script>
    <link href="~/contents/css/structure.css" rel="stylesheet" />
    <link href="~/contents/css/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />
    <link href="~/contents/css/style.css" rel="stylesheet" />
    <script type="text/javascript">
  
        $(function () {
            $('#message_layer').click(function () {
                $('#message_layer_body').slideDown("slow");
            });

            $('#keyboard_layer_1').click(function () {
                $('#keyboard_layer_body').slideDown("slow");
            });

            $('#conversation_layer').click(function () {
                $('#conversation_layer_body').slideDown("slow");
            });

            $('#notification_layer').click(function () {
                $('#notification_layer_body').slideDown("slow");
            });

            $(document).click(function (e) {
                var target = e.target;
                if (!$(target).is('#message_layer')) {
                    $('#message_layer_body').slideUp("slow");
                }

                if (!$(target).is('#conversation_layer')) {
                    $('#conversation_layer_body').slideUp("slow");
                }

                if (!$(target).is('#notification_layer')) {
                    $('#notification_layer_body').slideUp("slow");
                }
                });

        });
      
    </script>
</head>

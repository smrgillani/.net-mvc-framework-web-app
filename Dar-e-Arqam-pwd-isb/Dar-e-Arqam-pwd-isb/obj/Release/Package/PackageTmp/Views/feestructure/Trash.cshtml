@using Dar_e_Arqam_pwd_isb.Models;
@model AllClasses
@{
    ViewBag.Title = "Trash";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script_9.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
      $(document).ready(function () {
          if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
           }
      });
</script>


<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Fee Structures</p></div>
<div class="p_page_head_left"><h2 class="fee_structures">Fee Structures</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("trash", "feestructure", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required fee structure in trash .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-add-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="" id="AddNewFeeStructure" class="add_new_item">Add New Fee Structure</a>
<a href="/feestructure/all">All Active Fee Structures </a>
<a href="/feestructure/trash">Trash</a>
<div class="clear"></div>
</div>
<h3 class="page_main_headings">Trash</h3>
@if(Model != null) {
foreach (var driv in Model.FeeStructure_s) {          
<div class="items_dir_main_div">
<div class="items_dir_main_div_inner">
<div class="items_dir_main_div_inner_img"><img src="~/contents/images/fee_structure_s.png" /></div>
<div class="items_dir_main_div_inner_detail">
    <div class="items_dir_main_div_inner_detail_hd"><h3>@driv.Name_of_lvl</h3></div>
    <div class="items_dir_main_div_inner_detail_li"><p><b>Registration Fee :</b> @driv.Reg_fee</p></div>
    <div class="items_dir_main_div_inner_detail_li"><p><b>Tuition Fee :</b> @driv.Monthly_fee</p></div>
</div>
<div class="clear"></div>
</div>
<div class="items_dir_main_div_inner_opt">
<div class="items_dir_main_div_inner_opt_dtl"><a href="">View</a></div>
<div class="items_dir_main_div_inner_opt_edit"><a href="/feestructure/edit/@driv.Id" class="UpdateExistingFeeStructure">Edit</a></div>
<div class="items_dir_main_div_inner_opt_dlt"><a href="">Delete</a></div>
<div class="clear"></div>
</div>
</div>

 }
}
else {
    @ViewBag.StatusMessage
}

<div class="clear"></div>
</div>
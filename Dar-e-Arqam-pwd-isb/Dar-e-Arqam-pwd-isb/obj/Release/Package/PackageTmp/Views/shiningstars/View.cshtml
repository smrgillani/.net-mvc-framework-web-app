@using Dar_e_Arqam_pwd_isb.Models
@model AllClasses
@{
    ViewBag.Title = "View Shining Star";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/contents/js/script_8.js"></script>
<link href="~/contents/css/style.css" rel="stylesheet" />

<script type="text/javascript">
      $(document).ready(function () {
          if ('@TempData["msg"]' != "") {
              $("#dialog-msg").dialog('open');
          }
          $("#Stars_tabs").tabs();
      });
</script>

<div class="body_right_top_area">
<div class="p_page_head">
<div class="p_page_head_top"><p> > Shining Stars</p></div>
<div class="p_page_head_left"><h2 class="shining_stars">Shining Stars</h2></div>
<div class="p_page_head_right">
<div class="p_page_head_right_search">
@using (Html.BeginForm("Index", "shiningstars", FormMethod.Get))
{
<div class="p_page_head_right_search_input"> @Html.TextBoxFor(m => m.Search_key, new { placeholder="Type anything to search the required star .... " }) </div>
<div class="p_page_head_right_search_btn"> <input type="submit" name="submit" value="Search" /> </div>
<div class="clear"></div>    
}
</div>
</div>
<div class="clear"></div>
</div>

<!--Create-->
<div id="dialog-add-form"></div>

<!--Success Message-->
<div id="dialog-msg" style="display: none">
    <p class="db_msg">
        @TempData["msg"]!
    </p>
</div>

<!--Error-->
 <div id="dialog-error" style="display: none">
    <p class="db_msg">
        Something Wrong With Your Internet Connection , Please Check Your Internet Connetion Settings !
    </p>
</div>
</div>

<div class="body_right_bot_area">

<div class="p_page_head_bot_links">
<a href="" id="AddNewShiningStar" class="add_new_item">Add New Shining Star</a>
<a href="/shiningstars/all">All Active Shining Stars </a>
<a href="/shiningstars/trash">Trash</a>
<div class="clear"></div>
</div>

<div id="Stars_tabs">
  <ul>
    <li><a href="#tabs-1">Star Contents</a></li>
      <li><a href="#tabs-2">Web Settings</a></li>
  </ul>
<div id="tabs-1">
<h3 class="page_tabs_main_headings">Star Content</h3>

<div class="page_contents_detail_opt">
<div class="page_contents_detail_opt_dlt"><a href="/shiningstars/delstar/@Model.Star.Id">Delete</a></div>
<div class="page_contents_detail_opt_edit"><a href="/shiningstars/edit/@Model.Star.Id" class="UpdateExistingStar">Edit</a></div>
<div class="clear"></div>
</div> 
    
<div class="page_contents_info_boxes_for_img">
<img src="~/Stars/@Model.Star.Picture" />
</div>

<div class="page_contents_info_boxes_for_content">
<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Name </b> :</p> 
<p class="page_contents_detail">@Model.Star.Name </p>
</div>

<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Detail</b> :</p> 
<p class="page_contents_detail"> @if(Model.Star.Star_type == "2"){<span>Star Of The Month</span>
                                 }
                                 else if (Model.Star.Star_type == "3")
                                 {<span>Star Of The Year</span>
                                                                     }
                                 else if (Model.Star.Star_type == "1")
                                 {<span>Star Of The Week</span>
                                                                     }
                                 else
                                 {
                                                                     } </p>
</div>

<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Achievement</b> :</p> 
<p class="page_contents_detail">@Model.Star.Achievement</p>
</div>

</div>

    <div class="clear"></div>

</div>
<div id="tabs-2">
<h3 class="page_tabs_main_headings"> Web Settings</h3>

<div class="p_page_head_bot_links">
<a href="/shiningstars/publish/@Model.Star.Id" id="ChangeSettingsShiningStar" class="add_new_item" style="margin-left:0;">Change Settings</a>
<div class="clear"></div>
</div>

<div class="page_contents_info_boxes_nrml">
<p class="page_contents_detail_h"> <b> Publish On Web </b> :</p>
@if (@Model.Star.Publish == "2")
{
<p class="page_contents_detail">Published On Web !</p>
}else{
    <p class="page_contents_detail">Not Published On Web !</p>
}    
</div>

</div>
</div>

</div>

